<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="true">
    <shape>
        <stroke
            android:color="@color/colorButton"
            android:width="1dip"/>
        <corners
            android:radius="20dp"/>
        <padding
            android:bottom="10dp"
            android:right="10dp"
            android:top="10dp"
            android:left="10dp"/>
    </shape>
</item>
    <item android:state_focused="true">
